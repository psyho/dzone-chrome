{
  "name": "Google Chrome DZone extension",
  "version": "1.0",
  "description": "Voting extension for DZone.",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://www.dzone.com/*"  
  ],
  "content_scripts": [
    {
      "js": [
        "dzone_content_script.js"
      ],
      "matches": [
        "http://*/*"
      ]
    }
  ]
}